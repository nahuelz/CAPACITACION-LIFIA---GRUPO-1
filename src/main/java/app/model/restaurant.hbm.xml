<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
		<hibernate-mapping package="app.model">
			<class name="Restaurant" table="RESTAURANT">
				<id name="idRestaurant" column="ID_RESTAURANT" type="int">
					<generator class="native" />
				</id>
				
				<property name="name" column="NAME"></property>
				
				<property name="description" column="DESCRIPTION"></property>
				
				<property name="phone" column="PHONE"></property>
				
				<property name="category" column="category"></property>
				
				<many-to-one name="rank" column="ID_RANK" cascade="all"/>
				
				<set name="dishes" cascade="all">
					<key column="ID_RESTAURANT" />
					<one-to-many class="Dish" />
				</set>
				
				<set name="menues" cascade="all">
					<key column="ID_RESTAURANT" />
					<one-to-many class="Menu" />
				</set>
				
				<set name="comments" cascade="all">
					<key column="ID_RESTAURANT" />
					<one-to-many class="Comment" />
				</set>
				
				<set name="managers" table="RESTAURANT_MANAGER" cascade="all">
					<key column="ID_RESTAURANT"/>
					<many-to-many column="ID_MANAGER" class="Manager"/>
				</set>
			</class>
		</hibernate-mapping>